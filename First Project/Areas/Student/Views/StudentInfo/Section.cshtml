@model First_Project.Areas.Student.Models.StudentDetailsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">Section Info</h5>
        <hr>
        <div class="container">
            <form asp-area="Student" id="FormId" asp-controller="StudentInfo" asp-action="Section" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="sectionsId" id="sectionId" value="0" />
                <div class="form-group row">
                    <label for="employeeDesignation" class="col-sm-2 col-form-label">Section NameEN</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="NameEN" id="NameEN" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="employeeSalary" class="col-sm-2 col-form-label">Section NameBN</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="NameBN" id="NameBN" required>
                    </div>
                </div>
                <hr />
                <button type="submit" id="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;">Save</button>

            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-body">
                <table class="table table-striped table-bordered" id="example">
                    <thead>
                        <tr>
                            <th>SL. No</th>
                            <th>Section NameEN</th>
                            <th>Section NameBN</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                            @foreach (var data in Model.sectionsInfo)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@data?.NameEN</td>
                                    <td>@data?.NameBN</td>
                                    <td>
                                        <a class="btn btn-success" onclick="Edit(@data.Id,'@data?.NameEN','@data?.NameBN')" href="#">Edit</a>
                                        <a class="btn btn-danger" onclick="Remove(@data.Id)" href="#">Delete</a>
                                    </td>

                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function Edit(Id,NameEN,NameBN) {
        $('#sectionId').val(Id);
        $('#NameEN').val(NameEN);
        $('#NameBN').val(NameBN);
    }
</script>