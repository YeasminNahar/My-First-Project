<script>
        $(document).ready(function () {
            $('#ClassTable').DataTable();
        });

        function Edit(Id, countryId, ClassName, ClassNameBn) {
            $('#ClassId').val(Id);
            $('#countryId').val(countryId);
            $('#ClassName').val(ClassName);
            $('#ClassNameBn').val(ClassNameBn);
        }
</script>