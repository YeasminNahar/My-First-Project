@model First_Project.Areas.Master.Models.MastersViewModel

@{
    ViewData["Title"] = "Class Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title ml-5 mt-2" style="color: black">Class Info</h5>
        <hr>
        <div class="container">
            <form asp-area="Master" id="FormId" asp-controller="Masters" asp-action="ClassName" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="ClassId" id="ClassId" value="0" />
                <div class="form-group row">
                    <label for="ClassName" class="col-sm-3 col-form-label float-right">Class Name (English)</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="ClassName" id="ClassName" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="ClassNameBn" class="col-sm-3 col-form-label float-right">Class Name (Bangla)</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="ClassNameBn" id="ClassNameBn" required>
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" id="submit" value="Submit" class="btn btn-success btn-lg" style="float:right;margin-top:5px;"><i class="fa fa-save"></i></button>
                    </div>
                    <div class="col-sm-2">
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<br />
<hr />
