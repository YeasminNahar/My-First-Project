@model First_Project.Areas.Master.Models.MastersViewModel

@{
    ViewData["Title"] = "Country Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title ml-5 mt-2" style="color: black">Country Info</h5>
        <hr>
        <div class="container">
            <form asp-area="Master" id="FormId" asp-controller="Masters" asp-action="Country" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="countriesId" id="countriesId" value="0" />
                <div class="form-group row">
                    <label for="countryName" class="col-sm-1 col-form-label"></label>
                    <label for="countryName" class="col-sm-3 col-form-label float-right">Country Name (English)</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="countryName" id="countryName" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="countryNameBn" class="col-sm-1 col-form-label"></label>
                    <label for="countryNameBn" class="col-sm-3 col-form-label float-right">Country Name (Bangla)</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="countryNameBn" id="countryNameBn" required>
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" id="submit" value="Submit" class="btn btn-success btn-lg" style="float:right;margin-top:5px;"><i class="fa fa-save"></i></button>
                    </div>
                    <div class="col-sm-2">
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix  ml-3 mt-3" style="width:98%">
    <div class="col-12 container">
        <div class="card mb-4">
            <div class="card-body">
                <table class="table table-striped table-bordered" id="countryTable">
                    <thead>
                        <tr>
                            <th>SL. No</th>
                            <th>Country Name (English)</th>
                            <th>Country Name (Bangla)</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                            @foreach (var data in Model.countries)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@data?.countryName</td>
                                    <td>@data?.countryNameBn</td>
                                    <td>
                                        <a class="btn btn-success" onclick="Edit(@data.Id,'@data?.countryName','@data?.countryNameBn')" href="#"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger" onclick="Remove(@data.Id)" href="#"><i class="fa fa-trash"></i></a>
                                    </td>

                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#countryTable').DataTable();
    });

    function Edit(Id,countryName,countryNameBn) {
        $('#countriesId').val(Id);
        $('#countryName').val(countryName);
        $('#countryNameBn').val(countryNameBn);
    }
</script>